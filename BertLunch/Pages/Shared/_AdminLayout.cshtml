<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/x-icon" href="~/favicon.ico">
        <title>@ViewData["Title"] - BertLunch</title>

        <link rel="stylesheet" type="text/css" href="~/css/AdminStyles/adminStyles.css" asp-append-version="true" />
        <link rel="stylesheet" type="text/css" href="~/css/AdminStyles/maxwidth575px.css" asp-append-version="true" />
        <link rel="stylesheet" type="text/css" href="~/css/AdminStyles/maxwidth991px.css" asp-append-version="true" />
        <link rel="stylesheet" type="text/css" href="~/css/AdminStyles/minwidth992px.css" asp-append-version="true" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/min/dropzone.min.css" rel="stylesheet">


        <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

<body>
    <div class="container-fluid position-relative d-flex p-0">

        <partial name="../Admin/PartialFiles/_Sidebar"/>

        <div class="content">
            <partial name="../Admin/PartialFiles/_Navbar" />
            @RenderBody()
        </div>
        
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/min/dropzone.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
