@page
@using BertLunch.Areas.Identity.Pages.Account;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .login_signup {
        background-image: linear-gradient(rgba(0, 0, 0, 0.10),rgba(0, 0, 0, 0.6)),url('/img/homepage/login.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: bottom;
        width: 100%;
    }

        .login_signup .background_login {
            background: #ffffffa3;
            border-radius: 7px;
            display: block;
            padding: 7em 2em;
            margin: 2em 0;
        }

    .form-check-input:checked {
        background-color: #223f49ff;
        border-color: #223f49ff;
    }

    .form-check-input {
        font-size: 20px;
    }

    .button_general {
        width: 40%;
        border: none;
        display: block;
        padding: .5em 0px;
        font-size: 20px;
        font-weight: 700;
        border-radius: 7px;
    }

    .login {
        background: #223f49ff;
        color: #fff;
    }

    .register {
        color: #000;
        text-align: center;
    }

    a.register.button_general:hover {
        background: antiquewhite;
        color: #000;
    }

    .login_other_options p a {
        color: #000;
    }

    img.link_icon {
        width: 25px;
    }

    a.href_link .container {
        background: #ffffff96 !important;
        margin: .5em 0px;
        padding: 10px 0px;
        align-items: center;
    }

        a.href_link .container:hover {
            background: #e3e3e3a3 !important;
        }

    p.link_writing {
        color: #000000ad;
        font-size: 14px;
        text-align: center;
        margin-bottom: 0px;
    }
</style>

<div class="login_signup">
    <div class="row container justify-content-end">
        <div class="col-md-5">
            <section class="background_login">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Psuedo" class="form-control" autocomplete="off" aria-required="false" />
                        <label asp-for="Input.Psuedo">Psuedo</label>
                        <span asp-validation-for="Input.Psuedo" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </section>
        </div>
    </div>
</div>

