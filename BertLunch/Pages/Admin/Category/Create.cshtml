@page
@model BertLunch.Pages.Admin.Category.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12">
            <div class="container">
                <div class="background-secondary container-items h-100 p-4">
                    <form class="container" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <h6 class="mb-4 text-white">Nouvelle category</h6>

                        <div class="form-floating mb-3 w-50">
                            <input class="form-control" id="floatingInput"
                                   asp-for="Category.Label" autocomplete="off" aria-required="true" />
                            <label for="floatingInput" asp-for="Category.Label">Category</label>
                            <span asp-validation-for="Category.Label" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <div>
                                <a asp-page="Index">Back to List</a>
                            </div>
                            <button type="submit" name="submit" value="Create">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
