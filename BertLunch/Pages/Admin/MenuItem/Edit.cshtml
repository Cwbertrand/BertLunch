@model BertLunch.Pages.Admin.MenuItem.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>MenuItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MenuItem.Id" />
            <div class="form-group">
                <label asp-for="MenuItem.MenuName" class="control-label"></label>
                <input asp-for="MenuItem.MenuName" class="form-control" />
                <span asp-validation-for="MenuItem.MenuName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Ingredient" class="control-label"></label>
                <input asp-for="MenuItem.Ingredient" class="form-control" />
                <span asp-validation-for="MenuItem.Ingredient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Description" class="control-label"></label>
                <input asp-for="MenuItem.Description" class="form-control" />
                <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Price" class="control-label"></label>
                <input asp-for="MenuItem.Price" class="form-control" />
                <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Image" class="control-label"></label>
                <input asp-for="MenuItem.Image" class="form-control" />
                <span asp-validation-for="MenuItem.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.CreatedAt" class="control-label"></label>
                <input asp-for="MenuItem.CreatedAt" class="form-control" />
                <span asp-validation-for="MenuItem.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.EndedAt" class="control-label"></label>
                <input asp-for="MenuItem.EndedAt" class="form-control" />
                <span asp-validation-for="MenuItem.EndedAt" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MenuItem.IsWeek" /> @Html.DisplayNameFor(model => model.MenuItem.IsWeek)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MenuItem.IsAvailable" /> @Html.DisplayNameFor(model => model.MenuItem.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.CategoryId" class="control-label"></label>
                <select asp-for="MenuItem.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="MenuItem.CategoryId" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="MenuItem.MenuCategoryId" class="control-label"></label>
