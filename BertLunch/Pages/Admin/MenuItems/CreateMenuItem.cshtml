                            <label for="floatingSelect">Category</label>
                        </div> *@
                        <div class="form-floating mb-3 w-50">
                            @Html.DropDownList("MenuCategoryId", ViewBag.MenuCategories as SelectList,
                                "Select a menu category", new { @class = "form-select" })
                            <label for="floatingSelect">Menu category</label>
                            <span asp-validation-for="MenuCategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" asp-for="Ingredient"
                                      id="floatingTextarea" style="height: 150px;"></textarea>
                            <label asp-for="Ingredient" for="floatingTextarea">Ingredient</label>
                            <span asp-validation-for="Ingredient" class="text-danger"></span>
                        </div>
                        <fieldset class="row mb-3 mt-4">
                            <legend class="col-form-label col-sm-2 pt-0 text-secondary">Menu availability</legend>
                            <div class="col-sm-10 d-flex mb-3">
                                <div class="form-check me-5">
                                    <input class="form-check-input" type="radio" asp-for="IsAvailable"
                                           id="gridRadios1" value="true" >
                                    <label class="form-check-label" for="gridRadios1">
                                        Menu is available
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="IsAvailable"
                                           id="gridRadios2" value="false" >
                                    <label class="form-check-label" for="gridRadios2">
                                        Menu is not available
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" asp-for="Description"
                                      id="floatingTextarea" style="height: 150px;"></textarea>
                            <label asp-for="Description" for="floatingTextarea">Description</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mt-3 w-50">
                            <label asp-for="ImageFile" for="formFileLg" class="form-label text-secondary">Upload the item photo</label>
                            <input asp-for="ImageFile" class="form-control form-control-lg bg-dark" aria-required="true" id="formFileLg" type="file">
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" name="submit" formmethod="post">Submit</button>
                        </div>







