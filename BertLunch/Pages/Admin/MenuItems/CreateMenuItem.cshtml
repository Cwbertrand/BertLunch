@model Model.MenuItem
@{
    ViewData["Title"] = "create_menu_item";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12">
            <div class="container">
                <div class="background-secondary container-items h-100 p-4">
                    <form class="container" enctype="multipart/form-data" asp-controller="MenuItem" asp-action="CreateMenuItem">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <h6 class="mb-4 text-white">Nouvelle menu</h6>

                        <div class="form-floating mb-3 w-50">
                            <input class="form-control" id="floatingInput"
                                   asp-for="MenuName" autocomplete="off" aria-required="true" />
                            <label for="floatingInput" asp-for="MenuName">Menu name</label>
                            <span asp-validation-for="MenuName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 w-50">
                            <input class="form-control" id="floatingNumber"
                                   asp-for="Price" autocomplete="off" aria-required="true" type="number" min="1"/>
                            <label for="floatingNumber" asp-for="Price">Price</label>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        @* <div class="form-floating mb-3 w-50">
